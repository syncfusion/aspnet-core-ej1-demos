@section SampleHeading{
    <span class="sampleName">Find Text Sample</span>
}


@model samplebrowser.Models.FindTextMessage
@section ControlsSection{
    @{Html.BeginForm("FindText", "Pdf", FormMethod.Post);
        {
            <div class="Common">
                <div class="tablediv">
                    <label class="rowdiv">
                        Click the button to find a text from the PDF document using Essential PDF.
                    </label>
                </div>
                <div class="tablediv">
                    <div class="rowdiv">
                        <div class="celldiv">
                            <div style="border: solid 1px #EDEDED; padding: 5px 7px 5px 7px;">
                                <table style="width:100%">
                                    <tr>
                                        <td align="right">
                                            <input type="submit" class="Button" value="View Template" name="ViewTemplate" />
                                            <input type="submit" class="Button" value="Find Text" name="Find" />
                                        </td>
                                    </tr>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            Html.EndForm();
        }}
    <br />
    @Html.TextAreaFor(s=>s.Message, 1,1, new { @style = "width:100%; height:56px"  })
    }
@section StyleSection{
    <style type="text/css" class="cssStyles">
        .frame {
            width: 85%;
        }
    </style>
}
