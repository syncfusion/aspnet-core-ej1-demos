@using Syncfusion.JavaScript.DataVisualization


@section SampleHeading{<span class="sampleName">XlsIO / Formulas</span>}

 @section ControlsSection{                                
	     @{ViewBag.Title = "    Essential XlsIO (Excel) : Formula : Syncfusion";}

@{Html.BeginForm("Formulas", "XlsIO", FormMethod.Post);
{
        <style type="text/css">
            .nonemptylabel
            {
                border-style:groove;
                width:80px;
            }
        </style>
    <div class="Common1">
        <div class="tablediv">
            <div class="rowdiv">
		<label>
                 Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please
                 Read Formula from the template document.
		</label>
            </div>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    <label>
                        Computed Value
                    </label>
                    &nbsp;&nbsp;
                    <label id="computedvalue" @{ if (ViewBag.computedValue.ToString() != string.Empty){ <text>class="nonemptylabel"</text> } }>
                        @ViewBag.computedValue
                    </label>
                </div>
                <div class="celldiv">

                </div>
            </div>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    <label>
                        Formula String
                    </label>
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <label id="formulastring" @{ if (ViewBag.computedValue.ToString() != string.Empty){ <text>class="nonemptylabel"</text> } }>
                        @ViewBag.formulaString
                    </label>

                </div>
                <div class="celldiv">
                </div>
            </div>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    <input id="readformula" class="buttonStyle" type="submit" name="button" value="Read Formula" style="width:150px;" />
                    <input id="writeformula" class="buttonStyle" type="submit" name="button" value="Write Formula" style="width:150px;" />
                </div>
            </div>
        </div>
    </div>
    Html.EndForm();
  }}
}
