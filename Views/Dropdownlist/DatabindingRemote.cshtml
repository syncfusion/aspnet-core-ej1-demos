@section SampleHeading{
    <span class="sampleName">Dropdownlist / Data Binding - Remote data</span>}
@section ControlsSection{
    <div class="frame">
        <div class="control">
            <ej-drop-down-list id="customerList" query="ej.Query().from('Customers').take(6)" watermark-text="Select a customer" width="100%">
                <e-datamanager url="//js.syncfusion.com/demos/ejServices/Wcf/Northwind.svc/" cross-domain="true"></e-datamanager>
                <e-drop-down-list-fields text="CustomerID" table-name="Customers"/>
            </ej-drop-down-list>
            
                    </div>
    </div>
}
