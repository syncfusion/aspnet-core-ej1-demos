@section SampleHeading{
    <span class="sampleName">ListBox / ToolTip</span>}
@section MetaTags{
    <meta name="description" content="This example demonstrates how to display tooltips for the list items in the Syncfusion ASP.NET Core ListBox component.">
}
@section ControlsSection{
        <div class="control frame">
            <div class="ctrllabel">Select a person</div>
            <ej-list-box id="tooltip" datasource="ViewBag.datasource" height="250px">
                <e-list-box-fields text="text" tooltip-text="desig" />
            </ej-list-box>           
        </div>
}
@section StyleSection{
    <style type="text/css" class="cssStyles">
        .ctrllabel {            
            padding: 5px 0px 12px 3px;
            font-weight:500;
        }

        .e-ddl-popup {
            margin: 0 auto;
        }

    </style>
}
