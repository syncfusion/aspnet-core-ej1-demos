@section SampleHeading{
    <span class="sampleName">Toolbar / Keyboard Interaction</span>}
@section ControlsSection{
    <div class="frame">
        <div class="control">
            <ej-toolbar id="toolbarKeySupport" width="100%">
                <e-toolbar-items>
                    <e-toolbar-item sprite-css-class="Stop" tooltip-text="Stop" />
                    <e-toolbar-item sprite-css-class="Back" tooltip-text="Previous" />
                    <e-toolbar-item sprite-css-class="FastForward" tooltip-text="Preview" />
                    <e-toolbar-item sprite-css-class="Play" tooltip-text="Play" />
                    <e-toolbar-item sprite-css-class="FastForward1" tooltip-text="Review" />
                    <e-toolbar-item sprite-css-class="Back1" tooltip-text="Next" />
                    <e-toolbar-item sprite-css-class="End" tooltip-text="Load/Ejaect" />
                    <e-toolbar-item sprite-css-class="PlayOnce" tooltip-text="PlayOnce" />
                    <e-toolbar-item sprite-css-class="RepeatAll" tooltip-text="RepeatAll" />
                    <e-toolbar-item sprite-css-class="PlayerSkew" tooltip-text="Skew" />
                </e-toolbar-items>
            </ej-toolbar>
        </div>
    </div>
}
@section PropertiesSection{
    <div class="row">
        <div class="col-md-3">
            Alt + j
        </div>
        <div class="col-md-3">
            Focuses the control
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            Up
        </div>
        <div class="col-md-3">
            Navigates up and right.
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            Down
        </div>
        <div class="col-md-3">
            Navigates down and left.
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            Left
        </div>
        <div class="col-md-3">
            Navigates down and left.
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            Right
        </div>
        <div class="col-md-3">
            Navigates up and right.
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            Home
        </div>
        <div class="col-md-3">
            Navigates to the starting item.
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            End
        </div>
        <div class="col-md-3">
            Navigates to the ending item.
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            Enter
        </div>
        <div class="col-md-3">
            Selects the focused item
        </div>
    </div>
}
@section StyleSection{
    <link href="@Url.Content("~/css/Samples/ToolKeyboard.css")" rel="stylesheet" />
}
@section ScriptSection{
    <script type="text/javascript">
        $(function () {
            //Control focus key
            $(document).on("keydown", function (e) {
                if (e.altKey && e.keyCode === 74) { // j- key code.
                    $("#toolbarKeySupport").focus();
                }
            });

            $("#sampleProperties").ejPropertiesPanel();
        });
    </script>
}
