@section SampleHeading{
    <span class="sampleName">Toolbar / Default Functionalities</span>}
@section ControlsSection{

    <div class="frame">
        <div class="control">
            <div class="ctrllabel">
                Toolbar
            </div>
             <ej-toolbar id="editingToolbar">
                 <e-toolbar-items >
                 <e-toolbar-item sprite-css-class="LeftAlign_tool" tooltip-text="Left"/>
                 <e-toolbar-item sprite-css-class="CenterAlign_tool" tooltip-text="Center" />
                 <e-toolbar-item sprite-css-class="RightAlign_tool" tooltip-text="Right" />
                 <e-toolbar-item sprite-css-class="Justify_tool" tooltip-text="Justify" />                   
                 <e-toolbar-item  sprite-css-class="Bold_tool" tooltip-text="Bold" />
                 <e-toolbar-item sprite-css-class="Italic_tool" tooltip-text="Italic" />
                 <e-toolbar-item sprite-css-class="StrikeThrough_tool" tooltip-text="StrikeThrough" />
                 <e-toolbar-item sprite-css-class="Underline_tool" tooltip-text="UnderLine" />
                 </e-toolbar-items>
              </ej-toolbar> 
        </div>
    </div>
}
@section StyleSection{
    <link href="@Url.Content("~/css/Samples/ToolbarDefault.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/Samples/ToolbarDefaultLabel.css")" rel="stylesheet" />
}
