@using Syncfusion.JavaScript
@using Syncfusion.MVC.EJ
@using Syncfusion.JavaScript.DataVisualization
@using Syncfusion.JavaScript.DataVisualization.Models

@section SampleHeading{
	<span class="sampleName">TreeMap / Customization</span>
	}
@section ControlsSection{
   
     <div>
        <span style="color:gray;font-size:x-large;font-family:'Segoe UI';font-weight:normal;" >US Olympic Medals FY2012</span>
    </div>
    <div style="min-height:380px">
        <ej-tree-map id="container" datasource="ViewBag.medals" color-value-path="GoldMedals" weight-value-path="TotalMedals">
            <e-leaf-item-settings show-labels="true" item-template="imageTemplate" label-path="GameName">
            </e-leaf-item-settings>
            <e-uni-color-mapping color="#D73028"></e-uni-color-mapping>
        </ej-tree-map>
                </div>
          <script id="imageTemplate" type="application/jsrender">
            <div style="border:1px solid white;background:url({{:Data.GameImage}}) no-repeat center center;height:{{:ItemHeight}}px;width:{{:ItemWidth}}px;" />
      </script>

    }