@section ScriptReferenceSection{
    <script src="@Url.Content("~/Scripts/cultures/ej.culture.en-US.min.js")"></script>
}
@section SampleHeading{<span class="sampleName">Editor / Keyboard </span>}

@section ControlsSection{
    <div class="frame">
        <div class="row">
            <div class="column">
                <span>Numeric Textbox</span>
            </div>
            <div class="column">
                <ej-numeric-text-box id="numeric" value="1000"  width="100%"/>
            </div>
        </div>
        <div class="row">
            <div class="column">
                <span>Percentage Textbox</span>
            </div>
            <div class="column">
                <ej-percentage-text-box id="percent" value="100" width="100%" />
            </div>
        </div>
        <div class="row">
            <div class="column">
                <span>Currency Textbox</span>
            </div>
            <div class="column">
                <ej-currency-text-box id="currency" value="50"  width="100%"/>
            </div>
        </div>
    </div>
}
@section PropertiesSection{
    <div class="row">
        <div class="col-md-3">
            Alt + j
        </div>
        <div class="col-md-3">
            Focuses the control.
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            Up
        </div>
        <div class="col-md-3">
            Increments the value
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            Down
        </div>
        <div class="col-md-3">
            Decrements the value
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            Tab
        </div>
        <div class="col-md-3">
            Focus the next element
        </div>
    </div>
}
@section ScriptSection{
    <script type="text/javascript">
        $(function () {
            $("#sampleProperties").ejPropertiesPanel();
            $(document).on("keydown", function (e) {
                if (e.altKey && e.keyCode === 74) { // j- key code.
                    $("#numeric").siblings(".e-input").focus();
                }
            });
        });
    </script>
}
@section StyleSection{

    <style type="text/css" class="cssStyles">
       .frame {
            width: 38%;
            padding: 30px;
        }
        .column {
            padding-bottom: 5px;
            padding-top: 5px;
        }
    </style>
}