@section ScriptReferenceSection{
    <script src="@Url.Content("~/Scripts/cultures/ej.culture.en-US.min.js")"></script>
}
@section SampleHeading{<span class="sampleName">Editor / Rtl</span> }

@section ControlsSection{
    <div class="frame">
        <div class="row">
            <div class="column">
                <span>Numeric Textbox</span>
            </div>
            <div class="column">
                <ej-numeric-text-box id="numeric" value="1000" enable-rtl="true" width="100%" />
            </div>
        </div>
        <div class="row">
            <div class="column">
                <span>Percentage Textbox</span>
            </div>
            <div class="column">
                <ej-percentage-text-box id="percent" value="100" enable-rtl="true" width="100%" />
            </div>
        </div>
        <div class="row">
            <div class="column">
                <span>Currency Textbox</span>
            </div>
            <div class="column">
                <ej-currency-text-box id="currency" value="50" enable-rtl="true" width="100%">
            </div>
        </div>
       </div>
}
@section StyleSection{
    <style>
        .frame {
            width: 38%;
            padding: 30px;
        }
        .column {
            padding: 5px;
        }
    </style>
}