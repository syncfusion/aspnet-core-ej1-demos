@section ScriptReferenceSection{
    <script src="@Url.Content("~/Scripts/cultures/ej.culture.en-US.min.js")"></script>
}
@section SampleHeading{<span class="sampleName">Editor / Default </span>}
@section ControlsSection{
    <div class="frame">
        <div class="row">
            <div class="column"><span>Kilometers</span></div>
            <div class="column">
                <ej-numeric-text-box id="numeric" value="1000"  width="100%"/>
            </div>
        </div>
        <div class="row">
            <div class="column">
                <span>Service Tax</span>
            </div>
            <div class="column">
                <ej-percentage-text-box id="percent" value="100" width="100%"/>
            </div>
        </div>
        <div class="row">
            <div class="column">
                <span>Fare</span>
            </div>
            <div class="column">
                <ej-currency-text-box id="currency" value="50" width="100%" />
            </div>
        </div>
        <div class="row">
            <div class="column">
                <span>Mobile No</span>
            </div>
            <div class="column">
                <ej-mask-edit id="maskedit" mask-format="99-999-99999" input-mode="@InputMode.Text" watermark-text="99-999-99999" width="100%" />
            </div>
        </div>
        <div class="row">
            <div class="column" style="float:right">
                  <ej-button id="btn" size="@ButtonSize.Small" text="PAY BILL" />
            </div>
        </div>
    </div>
}
@section StyleSection{

    <style>
        .frame {
            width: 38%;
            padding: 30px;
        }
        .column {
            padding: 5px;
        }
    </style>
}