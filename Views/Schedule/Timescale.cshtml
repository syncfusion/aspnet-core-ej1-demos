@using Syncfusion.JavaScript;

@section SampleHeading{
    <span class="sampleName">TimeScale</span>
}

@section ControlsSection{
    <div>
        <ej-schedule id="Schedule1" width="100%" height="525px" current-date="new DateTime(2017, 6, 5)">
            <e-time-scale enable="true" major-slot="60" minor-slot-count="6"></e-time-scale>
            <e-appointment-settings datasource="@ViewBag.appointments" subject='"Subject"' start-time='"StartTime"' end-time='"EndTime"' all-day='"AllDay"' recurrence='"Recurrence"' recurrence-rule='"RecurrenceRule"'></e-appointment-settings>
        </ej-schedule>
    </div>
}

@section PropertiesSection{
    <div id="sampleProperties">
        <div class="prop-grid">
            <div class="row">
                <div class="col-md-6">Major Slot</div>
                <div class="col-md-6">
                    <ej-drop-down-list id="majorslot" datasource="@ViewBag.majorValue" width="110px" selected-index="3"></ej-drop-down-list>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">Minor Slot</div>
                <div class="col-md-6">
                    <ej-drop-down-list id="minorslot" datasource="@ViewBag.minorValue" selected-index="5" width="110px"></ej-drop-down-list>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <ej-button id="submit" text="Submit" size="@ButtonSize.Small" click="onTimeScaleChange" />
                </div>
            </div>
        </div>
    </div>
}

@section ScriptSection{
    <script type="text/javascript">
        $(function () {
            $("#sampleProperties").ejPropertiesPanel();
        });

        function onTimeScaleChange(args) {
            $("#Schedule1").ejSchedule({
                timeScale: {
                    majorSlot: parseInt($("#majorslot").ejDropDownList("model.value")),
                    minorSlotCount: parseInt($("#minorslot").ejDropDownList("model.value"))
                }
            });
        }
    </script>
}