@{
    ViewBag.Title = "Default";
}

@section SampleHeading{
    <span class="sampleName">Signature / Default</span>}
@section MetaTags{
    <meta name="description" content="This example demonstrates how to capture or draw smooth signatures using the Syncfusion ASP.NET Core Signature component.">
}
@section ControlsSection{

    <div class="frame">
        <div class="control">
			<div>Sign here</div>
            <ej-signature id="mysign" height="400px" stroke-width="3" is-responsive="true" />
        </div>
    </div>
}
@section StyleSection{

    <style type="text/css">
        .frame {
            width: 80%;
        }
    </style>
}



