@section SampleHeading{ <span class="sampleName">ProgressBar / Rtl</span>}

@section ControlsSection{

    <div class="frame">
        <div class="control">
           
            <ej-progress-bar id="rtlBar" value="35" height="20px" enable-rtl="true"/>

        </div>
    </div>
}
@section ScriptSection{
    <script>
        var progress;
        $(document).ready(function () {
            progress = $("#rtlBar").data("ejProgressBar");
            progress.setModel({ text: progress.getPercentage() + " %" });
        });
    </script>
}
@section StyleSection{
    <style type="text/css" class="cssStyles">
        .frame {
            width: 350px;
        }
    </style>

}
