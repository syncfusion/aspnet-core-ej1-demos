@section SampleHeading{
    <span class="sampleName">Toolbar / Data Binding - Local Data</span>}
@section ControlsSection{
    <div class="frame">
        <div class="control">
            <ej-toolbar id="toolbarJson" enable-separator="true" orientation="@Orientation.Horizontal" width="100%" dataSource="ViewBag.datasource">
                <e-toolbar-fields id="empid" sprite-css-class="spriteCss" group="group"/>
            </ej-toolbar>
        </div>
    </div>
}
@section StyleSection{
    <link href="@Url.Content("~/css/Samples/ToolLocal.css")" rel="stylesheet" />
}
