@section SampleHeading{
    <span class="sampleName">ListBox / Rtl</span>}
@section MetaTags{
    <meta name="description" content="This example demonstrates how to list items in a right-to-left direction in the Syncfusion ASP.NET Core ListBox component.">
}
@section ControlsSection{
    <div class="control frame">
        <div class="ctrllabel">
            Select a country
        </div>
        <ej-list-box id="countrylist" datasource="ViewBag.datasource" enable-rtl="true">
            <e-list-box-fields text="country" />
        </ej-list-box>
    </div>
}
@section StyleSection{
    <style type="text/css" class="cssStyles">
        .ctrllabel {
            padding: 5px 0px 12px 3px;
            font-weight: 600;
        }

        .e-ddl-popup {
            margin: 0 auto;
        }

    </style>
}
