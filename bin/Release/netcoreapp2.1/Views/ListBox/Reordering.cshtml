@section SampleHeading{
    <span class="sampleName">ListBox / Reordering</span>}
@section MetaTags{
    <meta name="description" content="This example demonstrates how to move the Syncfusion ASP.NET Core ListBox component items up or down into another position.">
}
@section ControlsSection{
    <div class="control frame">
        <div class="ctrllabel">
            Reorder skills
        </div>
        <ej-list-box id="skillsets" datasource="ViewBag.datasource">
            <e-list-box-fields text="text" />
        </ej-list-box>
        
    </div>
}
@section PropertiesSection{
    <div class="row">
        <div class="col-md-12">
            <ej-button id="Moveup" text="Move Up" width="130px" click="Moveup" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <ej-button id="Movedown" text="Move Down" width="130px" click="Movedown" />
        </div>
    </div>
}
@section ScriptSection{
    <script type="text/javascript">
        var target;
        $(function () {
            $("#sampleProperties").ejPropertiesPanel();
        });
        function Moveup(e) {
            var target = $('#skillsets').data("ejListBox");
            target.moveUp();
        }
        function Movedown(e) {
            var target = $('#skillsets').data("ejListBox");
            target.moveDown();
        }

    </script>
}
@section StyleSection{
    <style type="text/css" class="cssStyles">
        .ctrllabel {
            padding: 0px 0px 12px 3px;
            font-weight: 600;
        }

        .e-ddl-popup {
            margin: 0 auto;
        }

    </style>
}
