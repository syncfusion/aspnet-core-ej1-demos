@section SampleHeading{<span class="sampleName">TreeView / Template </span>}
@section ControlsSection{

    <div style="width: 280px">
        <ej-tree-view id="treeView" template="#treeTemplate" create="oncreate">
            <e-tree-view-fields datasource="@ViewBag.datasource" id="id" parent-id="pid" has-child="hasChild" expanded="expanded"></e-tree-view-fields>
        </ej-tree-view>
       
    </div>
    <script id="treeTemplate" type="text/x-jsrender">

        {{if hasChild}}
        <div class="{{>name}}-style">{{>name}}</div>
        {{else}}
        <div class="cont-list">
            <img class="con-img" src="../images/treeview/template-image-{{>imgId}}.png" />
            <div class="cont-del"></div>
            <div class="cont-details">
                <b>{{>name}}</b><br />
                <span>{{>city}}</span>
                <br />
                <span>{{>phone}}</span>
            </div>
            <div class="treeFooter"></div>
        </div>
        {{/if}}

    </script>
    <script type="text/javascript">
        function oncreate(evt) {
            var treeObj = $("#treeView").data("ejTreeView");
            $("#treeView").find(".cont-del").bind("click", function (e) {
                treeObj.removeNode($(e.target).parents("li").first());
            });
        }
    </script>
}

@section StyleSection{
    <link href="@Url.Content("~/css/Samples/TreeViewTemplate.css")" rel="stylesheet" />
}