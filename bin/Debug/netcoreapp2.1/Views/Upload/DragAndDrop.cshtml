@section SampleHeading{
    <span class="sampleName">Upload / Drag And Drop </span>}
@section ControlsSection{
    <div class="frame">
        <div class="control">
             <ej-upload-box id="Draganddrop" save-url="//js.syncfusion.com/demos/ejServices/api/uploadbox/Save" remove-url="//js.syncfusion.com/demos/ejServices/api/uploadbox/Remove" allow-drag-and-drop="true" multiple-files-selection="true">
            </ej-upload-box>
        </div>
    </div>
}
@section StyleSection{
    <style class="cssStyles">
        .frame {
            width: 500px;
            height: 100px;
        }

        .control {
            width: 100%;
            height: 100%;
        }
    </style>
}
@section ScriptSection{
 <script>
document.addEventListener('dragover',function(event){
    event.preventDefault();
    event.dataTransfer.dropEffect = 'none';
    return false;
	},false);
	document.addEventListener('drop',function(event){
    event.dataTransfer.dropEffect = 'none';
    event.preventDefault();
    return false;
  },false);
 </script>
}
 
