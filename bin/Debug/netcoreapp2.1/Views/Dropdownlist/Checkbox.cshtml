@section SampleHeading
    {
    <span class="sampleName">Dropdownlist / Checkboxes</span>}
@section ControlsSection{
    <div class="frame">
        <div class="control">
            <ej-drop-down-list id="skillsets" datasource="(IEnumerable<Languages>)ViewBag.datasource" show-checkbox="true" watermark-text="Select your skill" width="100%">
                <e-drop-down-list-fields  text="text"/>
            </ej-drop-down-list> 
                    </div>
    </div>
}
@section PropertiesSection{
    <div class="row">
        <div class="col-md-12">
            <ej-toggle-button id="btnchkunchk" default-text="Check All" active-text="Uncheck All" change="onCheckUncheckAll"/>
                    </div>
    </div>
}
@section ScriptSection{
    <script type="text/javascript">
        var target;
        $(function () {
            $("#sampleProperties").ejPropertiesPanel();
        });
        function onCheckUncheckAll(args) {
            target = $('#skillsets').data("ejDropDownList");
            if (args.isChecked)
                target.checkAll();
            else
                target.unCheckAll();
        }
    </script>
}
