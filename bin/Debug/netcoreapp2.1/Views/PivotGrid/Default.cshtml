@using Syncfusion.JavaScript;
@section SampleHeading{<span class="sampleName">PivotGrid / Default</span> }
@section MetaTags{
    <meta name="description" content="This demo for Syncfusion Essential JS1 for ASP.NET Core Pivot Grid control shows how to bind pivot data which is in JSON format at script-side">
}
@section ControlsSection{
<ej-pivot-grid id="PivotGrid1" is-responsive="true" load="onload" enable-grouping-bar="true" enable-member-editor-sorting="true">
