@using Syncfusion.JavaScript.DataVisualization

@section SampleHeading{ <span class="sampleName">XlsIO/GettingStarted/DataTable</span>}
@section ControlsSection{
    @{ViewBag.Title = "    Essential XlsIO (Excel) : DataTable : Syncfusion";}
    @{Html.BeginForm("DataTable", "XlsIO", FormMethod.Post);
        {
            <div class="Common">
                <div class="tablediv">
                    <div class="rowdiv">
                        <label>
                            Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please
                            note that Microsoft Excel Viewer or Microsoft Excel is required to view the resultant document.
                        </label>
                    </div>
                    <br />
                </div>
            </div>

            <ej-grid id="Grid" allow-scrolling="true" height="300" width="540" isVisible="false">
                <e-datamanager json="(System.Data.DataTable)ViewBag.datasource" update-url="NormalUpdate" adaptor="remoteSaveAdaptor" />
                <e-edit-settings allow-adding="true" allow-editing="true" allow-deleting="true" edit-mode="@(EditMode.Normal)"></e-edit-settings>
                <e-columns>
                    <e-column width="50" field="ID" header-text="ID" text-align="Center" is-primary-key="true"></e-column>
                    <e-column width="160" field="SalesPerson" header-text="Name" text-align="Center"></e-column>
                    <e-column width="100" field="SalesJanJune" header-text="Jan-June" text-align="Center"></e-column>
                    <e-column width="100" field="SalesJulyDec" header-text="July-Dec" text-align="Center"></e-column>
                    <e-column width="100" field="Change" header-text="Change" text-align="Center"></e-column>
                </e-columns>
            </ej-grid>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    <label>
                        <strong> Save As :</strong>
                    </label>
                    <input id="rbtnXls" type="radio" name="SaveOption" value="Xls" />
                    <label for="rbtnXls">
                        XLS
                    </label>
                    &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                    <input id="rbtnXlsx" type="radio" name="SaveOption" value="Xlsx" checked="checked" />
                    <label for="rbtnXlsx">
                        XLSX
                    </label>
                </div>
                <br />
                <div class="celldiv">
                    <input id="input" class="buttonStyle" type="submit" name="button" value="Input Template" style="width:162px;" />
                    <input id="import" class="buttonStyle" type="submit" name="button" value="Import From Excel" style="width:162px;" />
                    <input id="export" class="buttonStyle" @ViewBag.exportButtonState type="submit" name="button" value="Export To Excel" style="width:162px;" />
                </div>
            </div>

            <script type="text/javascript">

        function EnableExport()
        {
            $('#export').prop("disabled", false);

        }
            </script>

            Html.EndForm();
        } }
}
