@section SampleHeading{
    <span class="sampleName">Toolbar / Methods</span>}
@section ControlsSection{
    <div class="frame">
        <div class="control">
            <ej-toolbar id="toolbarMethods" width="100%">
                <e-toolbar-items>
                    <e-toolbar-item id="Left" sprite-css-class="LeftAlign_tool" tooltip-text="Left" />
                    <e-toolbar-item id="Center" sprite-css-class="CenterAlign_tool" tooltip-text="Center" />
                    <e-toolbar-item id="Right" sprite-css-class="RightAlign_tool" tooltip-text="Right" />
                    <e-toolbar-item id="Justify" sprite-css-class="Justify_tool" tooltip-text="Justify" />
                    <e-toolbar-item id="Bold" sprite-css-class="Bold_tool" tooltip-text="Bold" />
                    <e-toolbar-item id="Italic" sprite-css-class="Italic_tool" tooltip-text="Italic" />
                    <e-toolbar-item id="StrikeThroug" sprite-css-class="StrikeThrough_tool" tooltip-text="Strike Through" />
                    <e-toolbar-item id="Underline" sprite-css-class="Underline_tool" tooltip-text="UnderLine" />
                </e-toolbar-items>                
            </ej-toolbar>          
        </div>
    </div>
}
@section PropertiesSection{
    <div class="row">
        <div class="col-md-3">
            Select Item By ID
        </div>
        <div class="col-md-3">
            <ej-drop-down-list id="optSelectId" width="100%" selected-item-index="0" dataSource="ViewBag.datasource" change="onSelectChange">
                <e-drop-down-list-fields text="text" value="value"/>
            </ej-drop-down-list>
        </div>
        <div class="col-md-3">
            Deselect Item By ID
        </div>
        <div class="col-md-3">
            <ej-drop-down-list id="optDeselectId" width="100%" selected-item-index="0" dataSource="ViewBag.datasource" change="onDeselectChange">
                <e-drop-down-list-fields text="text" value="value"/>
            </ej-drop-down-list>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            Disable Item By ID
        </div>
        <div class="col-md-3">
            <ej-drop-down-list id="optDisableId" dataSource="ViewBag.datasource" width="100%" selected-item-index="0" change="onDisableChange">
                <e-drop-down-list-fields text="text" value="value"/>
            </ej-drop-down-list>
        </div>
        <div class="col-md-3">
            Enable Item By ID
        </div>
        <div class="col-md-3">
            <ej-drop-down-list id="optEnableId" dataSource="ViewBag.datasource" width="100%" selected-item-index="0" change="onEnableChange">
                <e-drop-down-list-fields text="text" value="value"/>
            </ej-drop-down-list>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            Disable/Enable All
        </div>
        <div class="col-md-3">
            <ej-toggle-button id="enabledisable" width="100px" default-text="Disable" active-text="Enable" change="onEnableDisableAll" />
        </div>
        <div class="col-md-3">
            Show/Hide
        </div>
        <div class="col-md-3">
            <ej-toggle-button id="showhide" width="100px" default-text="Hide" active-text="Show" change="onShowHide" />
        </div>
    </div>
}
@section ScriptSection{
    <script type="text/javascript">
        $(function () {
            $("#sampleProperties").ejPropertiesPanel();
        });
        var toolbar1;
        function onSelectChange(args) {
            toolbar1 = $("#toolbarMethods").data("ejToolbar");
            toolbar1.selectItemByID(args.value);
        }
        function onDeselectChange(args) {
            toolbar1 = $("#toolbarMethods").data("ejToolbar");
            toolbar1.deselectItemByID(args.value);
        }
        function onDisableChange(args) {
            toolbar1 = $("#toolbarMethods").data("ejToolbar");
            toolbar1.disableItemByID(args.value);
        }
        function onEnableChange(args) {
            toolbar1 = $("#toolbarMethods").data("ejToolbar");
            toolbar1.enableItemByID(args.value);
        }

        function onEnableDisableAll(args) {
            toolbar1 = $("#toolbarMethods").data("ejToolbar");
            if (args.isChecked)

                toolbar1.disable();
            else
                toolbar1.enable();
            $("#optDisableId").data('ejDropDownList').option('selectedItemIndex', 0);
            $("#optEnableId").data('ejDropDownList').option('selectedItemIndex', 0);
        }
        function onShowHide(args) {
            toolbar1 = $("#toolbarMethods").data("ejToolbar");
            if (args.isChecked)
                toolbar1.hide();
            else
                toolbar1.show();
        }
    </script>
}
@section StyleSection{
    <link href="@Url.Content("~/css/Samples/ToolbarDefault.css")" rel="stylesheet" />

    <style type="text/css" class="cssStyles">
        ._button {
            width: 90px;
        }

        .frame {
            width: 35%;
        }
    </style>
}
