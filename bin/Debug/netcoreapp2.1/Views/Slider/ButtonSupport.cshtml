@section SampleHeading{ <span class="sampleName">Slider / ButtonSupport</span>}

@section ControlsSection{

    <div class="frame">
        <div class="rangetxt">Range</div>
        <ej-slider id="rangeSlider" slider-type="@SlideType.Range" values="30,60" show-buttons="true"/>
        <br />
        <br />
        <div class="minrangetxt">Min-Range</div>
        <ej-slider id="minSlider" slider-type="@SlideType.MinRange" value="40" show-buttons="true"  show-scale="true" large-step="20" small-step="5" increment-step="5"/>
    </div>
}
@section StyleSection{
    <style type="text/css" class="cssStyles">
        .frame {
            width: 50%;
        }

        .minrangetxt {
            font-size: 15px;
            margin-bottom: 24px;
        }

        .rangetxt {
            font-size: 15px;
            margin-bottom: 20px;
        }
    </style>
}
