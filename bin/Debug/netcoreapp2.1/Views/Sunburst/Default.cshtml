@using Syncfusion.JavaScript;
@using Syncfusion.JavaScript.DataVisualization;

@section SampleHeading{<span class="sampleName">Sunburst/ Default</span>}
@section MetaTags{
    <meta name="description" content="This sample demonstrates the default rendering of the Syncfusion ASP.NET Web Forms Sunburst control.">
}
@section ControlsSection{
    <div class="Common">
    <div style="height:600px">
        
        <ej-sunburstchart id="container" inner-radius="0.2" value-member-path="EmployeesCount">
            <e-sunburstchart-tooltip visible="true"></e-sunburstchart-tooltip>
            <e-sunburstchart-title text="Employees Count"></e-sunburstchart-title>
            <e-sunburstchart-size height="600"></e-sunburstchart-size>
            <e-sunburstchart-data-label-settings visible="true"></e-sunburstchart-data-label-settings>
            <e-sunburstchart-zoom-settings enable="true"></e-sunburstchart-zoom-settings>
            <e-sunburstchart-legend visible="true" position="@SunburstLegendPosition.Top"></e-sunburstchart-legend>
            <e-sunburstchart-levels>
                <e-sunburstchart-level group-member-path="Country"></e-sunburstchart-level>
                <e-sunburstchart-level group-member-path="JobDescription"></e-sunburstchart-level>
                <e-sunburstchart-level group-member-path="JobGroup"></e-sunburstchart-level>
                <e-sunburstchart-level group-member-path="JobRole"></e-sunburstchart-level>
            </e-sunburstchart-levels>
        </ej-sunburstchart>
        
    </div>
    </div>
}
@section ScriptSection{
    <script src="@Url.Content("~/scripts/Sunburst_Data.js")"></script>
    <script>
        
     $("document").ready(function () {
         var mapObj = $("#container").data("ejSunburstChart");
         mapObj.model.dataSource = default_DataSource;
         $("#container").ejSunburstChart("redraw");

     });


    </script>
}