@section SampleHeading{<span class="sampleName">FileExplorer / RTL </span>}
@section ControlsSection{
    <ej-file-explorer id="rtl" path="wwwroot/css/images/FileExplorerContent" layout="LargeIcons" enable-rtl="true" ajax-action="@Url.Content("FileActionDefault")" width="100%" is-responsive="true" >
        <e-file-ajax-settings>
            <e-download url="/FileExplorer/Download{0}"></e-download>
            <e-get-image url="/FileExplorer/GetImage{0}"></e-get-image>
            <e-upload url="/FileExplorer/Upload{0}"></e-upload>
        </e-file-ajax-settings>
    </ej-file-explorer>
}
