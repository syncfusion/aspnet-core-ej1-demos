@section SampleHeading{<span class="sampleName">WaitingPopup / Template</span> }
@section ControlsSection{
    <div id="target"></div>
    <ej-waiting-popup id="target" show-on-init="true" template="#content" append-to=".cols-sample-area"/>
    <div id="content">
        <div class="block">
            <div class="logo"></div>
            <div class="txt">
                <p>Create cutting-edge </p>
                <p><b>HTML5</b> web applications </p>
                <p>with ease </p>
            </div>
        </div>
        <div class="loader"></div>
    </div>
}



@section StyleSection{
  <style type="text/css" class="cssStyles">       
			.cols-sample-area{
				position:relative;
			}
    </style>
    <link href="@Url.Content("~/css/Samples/WaitingPopupTemplate.css")" rel="stylesheet" />
}