@section SampleHeading{<span class="sampleName">TreeView / NodeEdit </span>}
@section ControlsSection{    
    <div style="width: 250px">
        <ej-tree-view id="tree" allow-editing="true" allow-drag-and-drop="true" allow-drop-child="true" allow-drop-sibling="true" >
            <e-tree-view-items>
                <e-tree-view-item text="Laptops" expanded="true">
                    <e-tree-view-child-items>
                        <e-tree-view-child-item text="Lenovo"></e-tree-view-child-item>
                        <e-tree-view-child-item text="Dell"></e-tree-view-child-item>
                        <e-tree-view-child-item text="Sony"></e-tree-view-child-item>
                    </e-tree-view-child-items>
                </e-tree-view-item>
                <e-tree-view-item text="Desktop">
                    <e-tree-view-child-items>
                        <e-tree-view-child-item text="All in one Desktops"></e-tree-view-child-item>
                        <e-tree-view-child-item text="Monitors"></e-tree-view-child-item>
                        <e-tree-view-child-item text="RAM"></e-tree-view-child-item>
                    </e-tree-view-child-items>
                </e-tree-view-item>
                <e-tree-view-item text="Pen drives">
                    <e-tree-view-child-items>
                        <e-tree-view-child-item text="8 GB"></e-tree-view-child-item>
                        <e-tree-view-child-item text="16 GB"></e-tree-view-child-item>
                        <e-tree-view-child-item text="32 GB"></e-tree-view-child-item>
                        <e-tree-view-child-item text="64 GB"></e-tree-view-child-item>
                    </e-tree-view-child-items>
                </e-tree-view-item>
            </e-tree-view-items>
        </ej-tree-view>
       
    </div>
}
