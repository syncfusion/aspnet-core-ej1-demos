@section MetaTags{
   <meta name="description" content="TimePicker for ASP.NET Core with the strongly typed extension support. Value is set from the code behind by invoking TimePickerFor helper">
}

@section ScriptReferenceSection{
    <script src="@Url.Content("~/Scripts/cultures/ej.culture.en-US.min.js")"></script>
}
@model samplebrowser.Controllers.TimePickerController.timemodel

@section SampleHeading{
    
    <span class="sampleName">TimePicker / TimePickerFor </span>
}

@section ControlsSection{
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="frame">
        <div class="control">
            <ej-time-picker id="TimePick" ej-for="@Model.Value" 
             validation-rules='new Dictionary<string, object>() { { "required",true} }'
             validation-messages='new Dictionary<string, object>() { { "required","Time value is required"} }' />
            @Html.ValidationMessageFor(model => model.Value)
            <ej-button id="button" text="Post" type="Submit" />
         </div>
    </div>
}
    }
@section StyleSection{
    <style>
        #button {
            margin-left: 30px;
            margin-top: 20px;
        }
    </style>
}
