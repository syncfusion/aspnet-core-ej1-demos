@using Syncfusion.JavaScript;
@using Syncfusion.JavaScript.DataVisualization.DiagramEnums;
@section SampleHeading{ <span class="sampleName">Diagram / Default Functionalities</span>}
@section MetaTags{
    <meta name="description" content="This sample demonstrates to visualize a business process and logical relationships between activities using the diagram's swimlane.">
}
@section ControlsSection{
  
    <div style="float:left">
     <ej-symbol-palette id="symbolpalette" diagram-id="diagram" width="250px" height="700px" palette-item-width="51" palette-item-height="51" preview-height="100" preview-width="100" show-palette-item-text="false">
    <e-palettes>
        <e-palette name="FLOW SHAPES" expanded="true">
            <e-items>
                <e-flow-shape height="45" width="70" fill-color="white" border-width="1.5"  offset-x="35" offset-y="22.5" type="Flow" shape="Terminator"></e-flow-shape>
                <e-basic-shape height="70" width="70" fill-color="white" border-width="1.5"  offset-x="20" offset-y="20" shape="Ellipse"></e-basic-shape>
                <e-basic-shape height="70" width="70" fill-color="white" border-width="1.5" offset-x="20" offset-y="20" shape="Rectangle"></e-basic-shape>
                <e-flow-shape height="45" width="70" fill-color="white" border-width="1.5" offset-x="35" offset-y="22.5" type="Flow" shape="Decision"></e-flow-shape>
            </e-items>
        </e-palette>
        <e-palette name="SWIMLANE SHAPES" expanded="true">
            <e-items>
                <e-lane name="lane1" height="60" width="140" fill-color="#f5f5f5" offset-x="70" offset-y="30" orientation="horizontal" is-lane="true">
                <e-lane-header width="50" height="50" fill-color="#C7D4DF" font-size="11"></e-lane-header>
                </e-lane>
                <e-lane name="lane2" height="140" width="60" fill-color="#f5f5f5" offset-x="30" offset-y="70" orientation="vertical" is-lane="true">
                <e-lane-header width="50" height="50" fill-color="#C7D4DF" font-size="11"></e-lane-header>
                </e-lane>
                <e-phase name="vertical" type="phase" line-width="1" line-dash-array="3,3" line-color="#A9A9A9" orientation="vertical">
                </e-phase>
                <e-phase name="horizontal" type="phase" line-width="1" line-dash-array="3,3" line-color="#A9A9A9"  orientation="horizontal">
                </e-phase>
            </e-items>
        </e-palette>
      
     
        <e-palette name="CONNECTORS" expanded="true">
            <e-items>
               <e-connector name="connector1" line-width="2" line-color="#A9A9A9">
                   <e-source-point x="0" y="0"></e-source-point>
                   <e-target-decorator shape="Arrow" border-color="#A9A9A9" fill-color="#A9A9A9"></e-target-decorator>
                   <e-target-point x="40" y="40"></e-target-point>
                   <e-segments>
                       <e-segment type="Orthogonal"></e-segment>
                   </e-segments>
               </e-connector>
                <e-connector name="connector2" line-width="2" line-color="#A9A9A9">
                    <e-source-point x="0" y="0"></e-source-point>
                    <e-target-decorator shape="Arrow" border-color="#A9A9A9" fill-color="#A9A9A9"></e-target-decorator>
                    <e-target-point x="40" y="40"></e-target-point>
                    <e-segments>
                        <e-segment type="Straight"></e-segment>
                    </e-segments>
                </e-connector>
            </e-items>
        </e-palette>
      </e-palettes>
</ej-symbol-palette>
        </div>
    <div style="width:calc(100%-255px);height:700px;">
    <ej-diagram id="diagram" height="100%" enable-context-menu="false">
       <e-page-settings scroll-limit="@ScrollLimit.Diagram"></e-page-settings>
        <e-default-settings>
            <e-node width="100" height="40" fill-color="white">
                <e-labels>
                    <e-diagram-label font-size="11"></e-diagram-label>
                </e-labels>
            </e-node>
            <e-connector line-color="#606060">
                <e-target-decorator shape="Arrow" border-color="#606060" width="10" height="10"></e-target-decorator>
                <e-segments><e-segment type="Orthogonal"></e-segment></e-segments>
            </e-connector>
        </e-default-settings>
        <e-nodes>
          <e-swim-lane name="swimlane" phase-size="20" is-swimlane="true" type="swimlane" fill-color="#f5f5f5" orientation="horizontal" offset-x="350" offset-y="240" height="100" width="650">
              <e-swim-lane-header text="ONLINE PURCHASE STATUS" height="50" fill-color="#C7D4DF" font-size="11"></e-swim-lane-header>
              <e-lanes>
                  <e-lane name="lane1" fill-color="#f5f5f5" height="120">
                      <e-lane-header text="CUSTOMER" width="50" fill-color="#C7D4DF" font-size="11"></e-lane-header>
                      <e-children>
                          <e-flow-shape name="node1" margin-left="60" margin-top="20" shape="Terminator">
                              <e-labels>
                                  <e-diagram-label text="ORDER"></e-diagram-label>
                              </e-labels>
                          </e-flow-shape>
                      </e-children>
                  </e-lane>
                  <e-lane name="lane2" fill-color="#f5f5f5" height="120">
                      <e-lane-header text="ONLINE" width="50" fill-color="#C7D4DF" font-size="11"></e-lane-header>
                      <e-children>
                          <e-node name="node2" margin-left="190" margin-top="20">
                              <e-labels>
                                  <e-diagram-label text="Select item\nAdd cart"></e-diagram-label>
                              </e-labels>
                          </e-node>
                          <e-node name="node3" margin-left="350" margin-top="20">
                              <e-labels>
                                  <e-diagram-label text="Payment on\nDebit/Credit Card"></e-diagram-label>
                              </e-labels>
                          </e-node>
                      </e-children>
                  </e-lane>
                  <e-lane name="lane3" fill-color="#f5f5f5" height="120">
                      <e-lane-header text="SHOP" width="50" fill-color="#C7D4DF" font-size="11"></e-lane-header>
                      <e-children>
                          <e-node name="node4" margin-left="190" margin-top="20">
                              <e-labels>
                                  <e-diagram-label text="Get mail detail\nabout order"></e-diagram-label>
                              </e-labels>
                          </e-node>
                          <e-node name="node5" margin-left="350" margin-top="20">
                              <e-labels>
                                  <e-diagram-label text="Paking item"></e-diagram-label>
                              </e-labels>
                          </e-node>
                      </e-children>
                  </e-lane>
                  <e-lane name="lane4" fill-color="#f5f5f5" height="120">
                      <e-lane-header text="DELIVERY" width="50" fill-color="#C7D4DF" font-size="11"></e-lane-header>
                      <e-children>
                          <e-node name="node6" margin-left="190" margin-top="20">
                              <e-labels>
                                  <e-diagram-label text="Send Courier\n about Address"></e-diagram-label>
                              </e-labels>
                          </e-node>
                          <e-node name="node7" margin-left="350" margin-top="20">
                              <e-labels>
                                  <e-diagram-label text="Delivery on that\n Address"></e-diagram-label>
                              </e-labels>
                          </e-node>
                          <e-flow-shape name="node8" margin-left="500" margin-top="20"  shape="Terminator">
                              <e-labels>
                                  <e-diagram-label text="GET IT ITEM"></e-diagram-label>
                              </e-labels>
                          </e-flow-shape>
                      </e-children>
                  </e-lane>
              </e-lanes>
              <e-phases>
                  <e-phase name="phase1" offset="200" line-width="1" line-dash-array="3,3" line-color="#606060"></e-phase>
                  <e-phase name="phase2" offset="500" line-width="1" line-dash-array="3,3" line-color="#606060"></e-phase>
              </e-phases>
          </e-swim-lane>
        </e-nodes>
        <e-connectors>
           <e-connector name="connector1" source-node="node1" target-node="node2"></e-connector>
           <e-connector name="connector2" source-node="node2" target-node="node3"></e-connector>
           <e-connector name="connector3" source-node="node3" target-node="node4"></e-connector>
           <e-connector name="connector4" source-node="node4" target-node="node5"></e-connector>
           <e-connector name="connector5" source-node="node5" target-node="node6"></e-connector>
           <e-connector name="connector6" source-node="node6" target-node="node7"></e-connector>
           <e-connector name="connector7" source-node="node7" target-node="node8"></e-connector>
        </e-connectors>
      </ej-diagram>
      </div>
   }


<style>
    .svg-rotate-ie:hover {
        cursor: url("~/wwwroot/css/content/ej/common-images/rotate.cur"),default;
    }

    .svg-rotate {
        cursor: url("~/wwwroot/css/content/ej/common-images/rotate.cur"),default;
    }
</style>
