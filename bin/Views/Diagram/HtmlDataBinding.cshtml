@using Syncfusion.JavaScript;
@using Syncfusion.JavaScript.DataVisualization.DiagramEnums;
@section SampleHeading{ <span class="sampleName">Diagram / Default Functionalities</span>}
@section MetaTags{
    <meta name="description" content="This sample demonstrates generating the diagram from the HTML Table and using ASP.NET CORE diagram’s built-in layout algorithm.">
}
@section ControlsSection{
    <ej-diagram id="diagram" width="100%" height="650px" enable-context-menu="false" tool="ZoomPan" node-template="nodeTemplate">
        <e-snap-settings snap-constraints="None">
        </e-snap-settings>
        <e-page-settings scroll-limit="@ScrollLimit.Diagram"></e-page-settings>
        <e-default-settings>
            <e-node width="120" height="40" border-color="transparent">
                <e-labels>
                    <e-diagram-label name="label1" font-color="#ffffff">
                        <e-margin left="5" right="5"></e-margin>
                    </e-diagram-label>
                </e-labels>
            </e-node>
            <e-connector>
                <e-segments>
                    <e-segment type="Orthogonal"></e-segment>
                </e-segments>
                <e-target-decorator fill-color="#4F4F4F" border-color="#4F4F4F"></e-target-decorator>
            </e-connector>
        </e-default-settings>
        <e-datasource-settings id="Id" parent="ReportingPerson">
            <e-datamanager table="#htmlbinding"></e-datamanager>
        </e-datasource-settings>
        <e-layout type="HierarchicalTree" margin-x="0" margin-y="50" horizontal-spacing="30" vertical-spacing="40"></e-layout>
    </ej-diagram>
}

