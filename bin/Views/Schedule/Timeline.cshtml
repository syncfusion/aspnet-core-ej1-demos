@using Syncfusion.JavaScript;

@section SampleHeading{
    <span class="sampleName">Timeline Functionalities</span>
}
@section MetaTags{
    <meta name="description" content="This example shows how the timeline scheduler looks with its default configuration in the ASP.NET Core Scheduler.">
}
@section ControlsSection{
    <div>
        <ej-schedule id="Schedule1" width="100%" height="525px" current-date="new DateTime(2017, 6, 5)" orientation="Horizontal">
            <e-appointment-settings datasource="@ViewBag.appointments" subject='"Subject"' start-time='"StartTime"' end-time='"EndTime"' all-day='"AllDay"' recurrence='"Recurrence"' recurrence-rule='"RecurrenceRule"'></e-appointment-settings>
        </ej-schedule>
    </div>
}
